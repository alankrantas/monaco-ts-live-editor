{
    "name": "monaco-ts-live-editor",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "upgrade-all": "yarn-upgrade-all && yarn upgrade",
        "dev": "vite --port 3000 --open --host",
        "build": "vite build",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview --port 8080 --open --host",
        "pull": "git pull origin main",
        "push": "git add . && git commit -m \"User updating\" && git push origin main",
        "commit": "yarn pull && yarn push"
    },
    "dependencies": {
        "@monaco-editor/react": "^4.6.0",
        "react": "^18.3.1",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/react": "^18.3.1",
        "@types/react-dom": "^18.2.25",
        "@typescript-eslint/eslint-plugin": "^7.7.1",
        "@typescript-eslint/parser": "^7.8.0",
        "@vitejs/plugin-react": "^4.2.1",
        "eslint": "^9.1.1",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-react-refresh": "^0.4.6",
        "typescript": "^5.4.5",
        "vite": "^5.2.10",
        "yarn-upgrade-all": "^0.7.2"
    }
}
